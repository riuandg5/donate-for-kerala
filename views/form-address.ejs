<% include partials/header %>

<div class="form">
	<form action="/form/currency/<%= donorid %>" method="POST">
		<div class="form-head">
			<div class="form-img">
				<img src="/form-img.png">
			</div>
			<div class="form-title">
				<h2>Donate for Kerala</h2>
				<p>Donation</p>
			</div>
		</div>
		<div class="form-body">
			<p>To pay send <%= coin.name %> to the address below</p>
			<div class="currency">
				<div class="coin address">
					<p id="address"><%= coin.address %></p><i class="fas fa-copy" title="Copy"></i>
				</div>
				<!-- <p><span id="timer"></span> Awaiting payment...</p> -->
				<a class="btn btn-qr"><i class="fas fa-qrcode"></i> Scan QR code instead</a>
				<div class="show-qr">
					<img src="<%= coin.qr %>">
				</div>
			</div>
			<div class="arrow-back">
				<a href="/form/currency/<%= donorid %>"><i class="fas fa-arrow-left"></i></a>
				<a href="/"><i class="fas fa-home"></i></a>
			</div>
		</div>
	</form>
</div>

<% include partials/footer %>