<% include partials/header %>

<div class="form">
	<form action="/form" method=POST>
		<div class="form-head">
			<div class="form-img">
				<img src="/form-img.png">
			</div>
			<div class="form-title">
				<h2>Donate for Kerala</h2>
				<p>Donation</p>
			</div>
		</div>
		<div class="form-body">
			<p>Please enter the following information:</p>
			<input type="text" name="name" placeholder="Full Name" value="<%= name %>" autocomplete="off" required>
			<input type="email" name="email" placeholder="Email" value="<%= email %>" autocomplete="off" required>
			<a href="/" class="btn btn-left"><i class="fas fa-home"></i></a>
			<button type="submit" class="btn btn-right">Continue</button>
		</div>
	</form>
</div>

<% include partials/footer %>