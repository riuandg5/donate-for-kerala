<% include partials/header %>

<div class="form">
	<form action="/form/currency/<%= donorid %>" method="POST">
		<div class="form-head">
			<div class="form-img">
				<img src="/form-img.png">
			</div>
			<div class="form-title">
				<h2>Donate for Kerala</h2>
				<p>Donation</p>
			</div>
		</div>
		<div class="form-body">
			<p>Select currency</p>
			<div class="currency">
			<% coins.forEach(function(coin){ %>
				<button type="submit" name="coin" value="<%= coin.name %>" class="coin">
					<img class="coin-img" src="<%= coin.image %>"><%= coin.fullname %><img class="arrow-img" src="/arrow.png">
				</button>
			<% }) %>
			</div>
			<div class="arrow-back">
				<a href="/form/<%= donorid %>"><i class="fas fa-arrow-left"></i></a>
				<a href="/"><i class="fas fa-home"></i></a>
			</div>
		</div>
	</form>
</div>

<% include partials/footer %>